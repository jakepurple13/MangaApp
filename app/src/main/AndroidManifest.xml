<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="manga.mangaapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.NFC" />

    <uses-feature android:name="android.hardware.nfc" android:required="false" />

    <application
        android:name=".StoryWorld"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MangaSide.MangaInfoActivity"
            android:screenOrientation="portrait">

            <intent-filter android:autoVerify="true">

                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="http" android:host="www.mangaworld.com" android:pathPrefix="/me" />
                <data android:scheme="https" android:host="mobile.mangaworld.com" android:pathPrefix="/me" />

            </intent-filter>

        </activity>

        <activity android:name=".MangaSide.MangaSiteInfoActivity"
            android:screenOrientation="portrait">

            <intent-filter android:autoVerify="true">

                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!--MangaReader-->
                <data android:scheme="http" android:host="www.mangaworld.com" android:pathPrefix="/mr" />
                <data android:scheme="https" android:host="mobile.mangaworld.com" android:pathPrefix="/mr" />
                <!--MangaPanda-->
                <data android:scheme="http" android:host="www.mangaworld.com" android:pathPrefix="/mp" />
                <data android:scheme="https" android:host="mobile.mangaworld.com" android:pathPrefix="/mp" />
                <!--LINEWebtoon-->
                <data android:scheme="http" android:host="www.mangaworld.com" android:pathPrefix="/lw" />
                <data android:scheme="https" android:host="mobile.mangaworld.com" android:pathPrefix="/lw" />
                <!--MangaFox-->
                <data android:scheme="http" android:host="www.mangaworld.com" android:pathPrefix="/mf" />
                <data android:scheme="https" android:host="mobile.mangaworld.com" android:pathPrefix="/mf" />
                <!--MangaHere-->
                <data android:scheme="http" android:host="www.mangaworld.com" android:pathPrefix="/mh" />
                <data android:scheme="https" android:host="mobile.mangaworld.com" android:pathPrefix="/mh" />
                <!--ReadMangaToday-->
                <data android:scheme="http" android:host="www.mangaworld.com" android:pathPrefix="/rmt" />
                <data android:scheme="https" android:host="mobile.mangaworld.com" android:pathPrefix="/rmt" />


            </intent-filter>
<!--

            <intent-filter android:autoVerify="true">
                &lt;!&ndash;MangaPanda&ndash;&gt;
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="http" android:host="www.mangaworld.com" android:pathPrefix="/mp" />
                <data android:scheme="https" android:host="mobile.mangaworld.com" android:pathPrefix="/mp" />

            </intent-filter>
-->

        </activity>
        <activity
            android:name=".MangaSide.ReadManga"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.AppCompat.NoBar" />
        <activity
            android:name=".MangaSide.ReadMangaSite"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.AppCompat.NoBar" />
        <!--<activity android:name=".UserInfo.Favorites" />-->
        <activity android:name=".MainHub" />
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="b2aa4fb9f3ba5babd156bae0537b7f764c7146fa" />
    </application>

</manifest>