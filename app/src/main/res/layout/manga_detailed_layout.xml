<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/manga_layout"
    android:padding="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_toEndOf="@+id/imageButton"
        android:text="Title" />

    <ImageView
        android:id="@+id/imageButton"
        android:layout_width="@dimen/half_image_width"
        android:layout_height="@dimen/half_image_height"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingStart="0dp"
        android:paddingEnd="5dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <!--<ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_toEndOf="@+id/imageButton"
        android:layout_below="@+id/name">

        <TextView
            android:id="@+id/details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_main2" />

    </ScrollView>-->

    <TextView
        android:id="@+id/chapter_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_below="@+id/name"
        android:layout_toEndOf="@+id/imageButton"
        android:text="Chapters" />

    <TextView
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/chapter_count"
        android:layout_toEndOf="@+id/imageButton"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:text="Description" />

</RelativeLayout>